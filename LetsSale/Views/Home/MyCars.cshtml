@{
    Layout = "_Layout";
    ViewData["Title"] = "Araçlarım";
}

@model IEnumerable<LetsSale.Models.UserCarsViewModel>


<!-- TakeCar Modal -->
<div class="modal fade" id="TakeCarModal" tabindex="-1" aria-labelledby="TakeCarModal" aria-hidden="true">
    <div class="modal-dialog">
        @if (TempData["SuccessMsg"] != null)
        {
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="TakeCarModalLbl">@TempData["LoginTitle"]</h5>
                </div>
                <div class="modal-body">
                    @TempData["SuccessMsg"]
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("MyCars", "Home")" class="btn btn-primary">Close</a>
                </div>
            </div>
        }
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 mb-3 mb-sm-0">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><strong> @item.CarBrand @item.CarName </strong></h5>
                        <ul class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Araç Plakası
                                <span class="badge text-bg-primary rounded-pill">@item.CarPlateNumber</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Araç Yılı 
                                <span class="badge text-bg-primary rounded-pill">@item.CarYear</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Araç Satış Tarihi
                                <span class="badge text-bg-primary rounded-pill">@item.CarSaleDate</span>
                            </li>
                        </ul>
                        <a href="@Url.Action("TakeService", "Home", new {CarID = item.CMainID})" class="btn btn-danger">Servise Gönder</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>