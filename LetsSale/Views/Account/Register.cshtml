@{
    ViewData["Title"] = "Register";
}

@model LetsSale.Models.SignUpViewModel

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
       <title>@ViewData["Title"] | Let's Sale</title>
    <link rel="shortcut icon" type="image/png" href="~/template/dashboard/assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/template/dashboard/assets/css/styles.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    <!-- Sign Up Modal -->
        <div class="modal fade" id="SignUpModal" tabindex="-1" aria-labelledby="SignUpModal" aria-hidden="true">
        <div class="modal-dialog">
            @if (TempData["SuccessMsg"] != null)
            {
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="SignUpModalLbl">@TempData["SignUpTitle"]</h5>
                </div>
                <div class="modal-body">
                        @TempData["SuccessMsg"]
                </div>
                    <div class="modal-footer">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Login</a>
                    </div>
            </div>
            }
            else if (TempData["FailMsg"] != null)
            {
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="SignUpModalLbl">@TempData["SignUpTitle"]</h5>
                    </div>
                    <div class="modal-body">
                        @TempData["FailMsg"]
                    </div>
                    <div class="modal-footer">
                        <a href="@Url.Action("Register", "Account")" class="btn btn-danger" data-bs-dismiss="modal">Close</a>
                    </div>
                </div>
            }
        </div>
        </div>
    <!-- IsEmpty Modal -->
    <div class="modal fade" id="IsEmptyModal" tabindex="-1" aria-labelledby="IsEmptyModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="IsEmptyModalLbl">Hey Hey Hey</h5>
                </div>
                <div class="modal-body">
                    Tüm Boşlukları Doldurun Lütfen!
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-danger" data-bs-dismiss="modal">Close</a>
                </div>
            </div>
        </div>
    </div>
  <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img src="~/template/dashboard/assets/images/logos/dark-logo.svg" width="180" alt="">
                                </a>
                                <p class="text-center">Your Social Campaigns</p>
                                <form method="post">
                                    <div class="mb-3">
                                        <label for="signUpName" class="form-label">Name</label>
                                        <input required  asp-for="UserName" type="text" class="form-control" id="signUpName" aria-describedby="textHelp">
                                    </div>
                                    <div class="mb-3">
                                        <label for="signUpLastName" class="form-label">Last Name</label>
                                        <input required  asp-for="UserLastName" type="text" class="form-control" id="signUpLastName" aria-describedby="textHelp">
                                    </div>
                                    <div class="mb-3">
                                        <label for="signUpPhone" class="form-label">Phone Number</label>
                                        <input required  asp-for="UserPhoneNumber" type="text" class="form-control" id="signUpPhone" aria-describedby="textHelp">
                                    </div>
                                    <div class="mb-3">
                                        <label for="signUpMail" class="form-label">Email Address</label>
                                        <input required  asp-for="UserEmail" type="email" class="form-control" id="signUpMail" aria-describedby="emailHelp">
                                    </div>
                                    <div class="mb-4">
                                        <label for="signUpPass" class="form-label">Password</label>
                                        <div class="input-group">
                                            <button type="button" class="btn btn-primary" id="showPass">
                                                <i id="showPassIco" class="bi bi-eye-fill"></i>
                                            </button>
                                            <input required asp-for="UserPassword" type="password" class="form-control" aria-describedby="showPass" id="signUpPass">
                                        </div>
                                    </div>
                                    <button id="SubmitBtn" type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Sign Up</button>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <p class="fs-4 mb-0 fw-bold">Already have an Account?</p>
                                        <a class="text-primary fw-bold ms-2" href="@Url.Action("Login", "Account")">Sign In</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/template/dashboard/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/template/dashboard/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            var isPass = true;

            $('#showPass').click(function () {
                var ico = $('#showPassIco');
                var pass = $('#signUpPass');

                if (isPass) {
                    ico.removeClass('bi-eye-fill').addClass('bi-eye-slash-fill');
                    pass.attr('type', 'text');
                } else {
                    ico.removeClass('bi-eye-slash-fill').addClass('bi-eye-fill');
                    pass.attr('type', 'password');
                }

                isPass = !isPass;
            });

            $('#SubmitBtn').click(function () {
                var inputs = $('input[required]');
                var allInputsFilled = true;
                inputs.each(function () {
                    if ($(this).val() === '') {
                        allInputsFilled = false;
                        return false; 
                    }
                });

                if (allInputsFilled) {
                    $('form').submit();
                } else {
                    var modal = $('#IsEmptyModal');
                    modal.modal('show');
                }
            });

            if ("@TempData["SuccessMsg"]" !== "" || "@TempData["FailMsg"]" !== "") {
                var signModal = document.getElementById('SignUpModal');
                var bootstrapModal = new bootstrap.Modal(signModal);
                bootstrapModal.show();
            }
        });

    </script>
</body>

</html>